    <a class="navbar-brand">Fruit Market</a>
    <button
        class="nav-item navbar-toggler"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasScrolling"
        aria-controls="offcanvasScrolling"
    >
        <span class="navbar-toggler-icon"></span>
